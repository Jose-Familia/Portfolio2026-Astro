---
/**
 * AuthorCard.astro
 * Tarjeta del autor para mostrar al final de artículos
 */

import Icon from '@/components/ui/Icon.astro';

// TODO: Obtener desde Keystatic settings
const author = {
  name: 'Jose R. Familia',
  bio: 'Desarrollador Frontend apasionado por crear experiencias web excepcionales. Especializado en React, TypeScript y diseño de interfaces.',
  social: {
    instagram: 'https://www.instagram.com/j.familia18',
    github: 'https://github.com/tu-usuario',
  },
};
---

<div class="flex flex-col sm:flex-row gap-6 p-6 rounded-2xl bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800">
  <!-- Info -->
  <div class="flex-1">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-50">
        {author.name}
      </h3>
      <div class="flex gap-2">
        <a
          href={author.social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-neutral-500 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          aria-label="Instagram"
        >
          <Icon name="instagram" size={18} />
        </a>
        <a
          href={author.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-neutral-500 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          aria-label="GitHub"
        >
          <Icon name="github" size={18} />
        </a>
      </div>
    </div>
    <p class="text-neutral-600 dark:text-neutral-400">
      {author.bio}
    </p>
  </div>
</div>
