---
// Componente visual de stack tecnológico para la sección Sobre Mí en Home
import { aboutContent } from '@/i18n/about';
import { getTechLogo } from '@/utils/techLogos';
const lang = 'es';
const stack = aboutContent[lang].stack;
---

<div class="w-full flex justify-center mb-16 animate-fade-in-up" style="--stagger: 4">
  <div class="flex flex-wrap justify-center gap-6 md:gap-8">
    {stack.map((tech) => {
      const logo = getTechLogo(tech.icon);
      return (
        <a href={tech.url} target="_blank" rel="noopener noreferrer" class="group">
          <span class="inline-flex items-center justify-center w-12 h-12 md:w-14 md:h-14 rounded-lg bg-neutral-100 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 group-hover:scale-110 transition-transform">
            {(logo?.light && logo?.dark) ? (
              <picture class="w-8 h-8 md:w-9 md:h-9 tech-logo" aria-hidden="true">
                <source media="(prefers-color-scheme: dark)" srcset={logo.light} />
                <img
                  data-light={logo.light}
                  data-dark={logo.dark}
                  src={logo.dark}
                  alt={tech.name}
                  class="w-full h-full object-contain tech-logo-img"
                />
              </picture>
            ) : (logo?.single || logo?.light || logo?.dark) ? (
              <span class="w-8 h-8 md:w-9 md:h-9 tech-logo" aria-hidden="true">
                <img src={logo.single || logo.light || logo.dark} alt={tech.name} class="w-full h-full object-contain" />
              </span>
            ) : null}
          </span>
        </a>
      );
    })}
  </div>
</div>

<style>
  .tech-logo { display: inline-block; }
  .tech-logo img { width: 100%; height: 100%; display: block; object-fit: contain; }
  /* JS-driven swapping for dual-variant logos */
</style>

<!-- Image theme swapping handled centrally in BaseLayout -->
