---
/**
 * Página de Contacto (ES)
 * Formulario y enlaces de contacto
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/Icon.astro';

const contactInfo = [
  {
    icon: 'mail',
    label: 'Email',
    value: 'familiajoserene@gmail.com',
    href: 'mailto:familiajoserene@gmail.com',
  },
  {
    icon: 'github',
    label: 'GitHub',
    value: '@Jose-Familia',
    href: 'https://github.com/Jose-Familia',
  },
  {
    icon: 'linkedin',
    label: 'LinkedIn',
    value: 'José R. Familia',
    href: 'https://www.linkedin.com/in/jrfamilia/',
  },
];
---

<BaseLayout
  title="Contacto"
  description="¿Tienes un proyecto en mente? Hablemos. Estoy disponible para proyectos freelance y colaboraciones."
>
  <section class="section-sm">
    <div class="container-main">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Información de contacto -->
        <div>
          <header class="mb-10">
            <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6 animate-fade-in-up">
              Hablemos
            </h1>
            <p class="text-xl text-neutral-600 dark:text-neutral-400 animate-fade-in-up" style="--stagger: 1">
              ¿Tienes un proyecto en mente o simplemente quieres saludar? 
              Me encantaría escucharte.
            </p>
          </header>
          
          <!-- Lista de contactos -->
          <div class="space-y-4 mb-10">
            {contactInfo.map((contact, index) => (
              <a
                href={contact.href}
                target={contact.href.startsWith('http') ? '_blank' : undefined}
                rel={contact.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="flex items-center gap-4 p-4 rounded-xl bg-neutral-50 dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 hover:border-neutral-300 dark:hover:border-neutral-700 transition-colors group animate-fade-in-up"
                style={`--stagger: ${index + 2}`}
              >
                <div class="w-12 h-12 flex items-center justify-center rounded-lg bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                  <Icon name={contact.icon} size={24} />
                </div>
                <div>
                  <p class="text-sm text-neutral-500">{contact.label}</p>
                  <p class="font-medium group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                    {contact.value}
                  </p>
                </div>
                <Icon name="arrow-up-right" size={20} class="ml-auto text-neutral-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors" />
              </a>
            ))}
          </div>
          
          <!-- Disponibilidad -->
          <div class="p-6 rounded-xl bg-green-50 dark:bg-green-950/30 border border-green-200 dark:border-green-900">
            <div class="flex items-center gap-3 mb-2">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
              </span>
              <span class="font-semibold text-green-800 dark:text-green-300">
                Disponible para proyectos
              </span>
            </div>
            <p class="text-sm text-green-700 dark:text-green-400">
              Actualmente tengo disponibilidad para nuevos proyectos freelance. 
              Tiempo de respuesta típico: 24-48 horas.
            </p>
          </div>
        </div>
        
        <!-- Formulario de contacto -->
        <div class="card p-6 md:p-8 lg:p-10">
          <h2 class="text-2xl font-semibold mb-6">Envíame un mensaje</h2>
          
          <form
            id="contact-form"
            class="space-y-6"
            action="/api/contact"
            method="POST"
          >
            <!-- Nombre -->
            <div>
              <label for="name" class="block text-sm font-medium mb-2">
                Nombre <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                autocomplete="name"
                class="input"
                placeholder="Tu nombre"
              />
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium mb-2">
                Email <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                class="input"
                placeholder="tu@email.com"
              />
            </div>
            
            <!-- Asunto -->
            <div>
              <label for="subject" class="block text-sm font-medium mb-2">
                Asunto
              </label>
              <select id="subject" name="subject" class="input">
                <option value="">Selecciona un asunto</option>
                <option value="proyecto">Tengo un proyecto</option>
                <option value="colaboracion">Propuesta de colaboración</option>
                <option value="consulta">Consulta técnica</option>
                <option value="otro">Otro</option>
              </select>
            </div>
            
            <!-- Mensaje -->
            <div>
              <label for="message" class="block text-sm font-medium mb-2">
                Mensaje <span class="text-red-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="textarea"
                placeholder="Cuéntame sobre tu proyecto o idea..."
              ></textarea>
            </div>
            

            
            <!-- Submit -->
            <Button type="submit" variant="primary" class="w-full">
              Enviar mensaje
              <Icon name="arrow-right" size={18} />
            </Button>
            
            <p class="text-xs text-neutral-500 text-center">
              Al enviar, tu mensaje será enviado directamente a mi correo.
            </p>
          </form>
          
          <!-- Estado del envío -->
          <div id="form-success" class="hidden mt-6 p-4 rounded-lg bg-green-50 dark:bg-green-950/30 border border-green-200 dark:border-green-800">
            <div class="flex items-center gap-3 text-green-800 dark:text-green-300">
              <Icon name="check" size={20} />
              <span class="font-medium">¡Mensaje enviado!</span>
            </div>
            <p class="text-sm text-green-700 dark:text-green-400 mt-1">
              Gracias por contactarme. Te responderé lo antes posible.
            </p>
          </div>
          
          <div id="form-error" class="hidden mt-6 p-4 rounded-lg bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-800">
            <p class="text-sm text-red-700 dark:text-red-400">
              Hubo un error al enviar tu mensaje. Por favor intenta de nuevo o contáctame directamente por email.
            </p>
          </div>
          
          <!-- Nota informativa -->
          <div class="mt-6 p-4 rounded-lg bg-primary-50 dark:bg-primary-950/30 border border-primary-200 dark:border-primary-800">
            <p class="text-sm text-primary-700 dark:text-primary-300">
              <strong>Nota:</strong> Tu mensaje será enviado de forma segura a través de nuestro servidor.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successMessage = document.getElementById('form-success');
    const errorMessage = document.getElementById('form-error');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      formData.append('lang', 'es');
      
      const submitButton = form.querySelector('button[type="submit"]');
      
      // Ocultar mensajes previos
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');
      
      if (submitButton) {
        submitButton.setAttribute('disabled', 'true');
        submitButton.innerHTML = `
          <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
          </svg>
          Enviando...
        `;
      }
      
      try {
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          form.classList.add('hidden');
          successMessage?.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(result.error || 'Error al enviar el mensaje');
        }
      } catch (error) {
        errorMessage?.classList.remove('hidden');
        console.error('Error:', error);
      } finally {
        if (submitButton) {
          submitButton.removeAttribute('disabled');
          submitButton.innerHTML = `
            Enviar mensaje
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          `;
        }
      }
    });
  }
  
  // Inicializar
  initContactForm();
  
  // Re-inicializar con View Transitions
  document.addEventListener('astro:after-swap', initContactForm);
</script>
